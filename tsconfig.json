{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "lib": ["ES2022"],
      "rootDir": ".",
      "outDir": "build",
      "allowSyntheticDefaultImports": true,
      "importHelpers": true,
      "alwaysStrict": true,
      "sourceMap": true,
      "incremental": true,
      "skipLibCheck": true,
      "strictNullChecks": true,
      "noImplicitAny": true,
      "strictBindCallApply": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true
    },
    "include": ["src/**/*", "test/**/*"],
    "exclude": ["node_modules"]
  }